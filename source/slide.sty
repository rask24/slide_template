\newcommand{\highlightbox}[2]{
    \tcboxmath
    [
        colback=#1!10,
        colframe=#1,
        sharp corners,
    ]
    {#2}
}

\newcommand{\textbox}[3]{
    \tcboxmath
    [
        enhanced,
        frame hidden,
        colback=#1!10,
        overlay={
            \node[below,#1] at (frame.south) {#3};
        }
    ]
    {#2}
}

\newcommand{\textunderbrace}[3]{
    \tcboxmath[
        enhanced,
        frame hidden,
        interior hidden,
        size=minimal,
        overlay={
            \draw[
                #1,
                thick,
                decorate,
                decoration={
                    brace,            % 中括弧を書く
                    amplitude=6pt,    % 中括弧がとがる幅
                    raise=2pt         % 中括弧をズラす
                }
            ] (frame.south east) -- (frame.south west)
                node[midway,below=8pt] {#3};
        }
    ]
    {#2}
}

